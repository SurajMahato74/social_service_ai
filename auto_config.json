{
  "scraping": {
    "interval_seconds": 1,
    "samples_per_scrape": 200,
    "max_iterations": 20
  },
  "training": {
    "retrain_threshold": 25,
    "min_samples_for_training": 100,
    "test_size": 0.2,
    "use_different_seeds": true
  },
  "data_collection": {
    "target_samples": 2000,
    "quality_threshold": 0.6,
    "max_text_length": 5000,
    "min_text_length": 15
  },
  "model": {
    "max_features": 8000,
    "ngram_range": [
      1,
      3
    ],
    "min_df": 2,
    "max_df": 0.95,
    "ensemble_threshold": 0.85
  },
  "system": {
    "auto_save_interval": 5,
    "log_level": "INFO",
    "backup_frequency": 500
  },
  "incremental_learning": {
    "enabled": true,
    "improvement_threshold": 0.001,
    "min_improvement_for_save": 0.0005,
    "max_iterations_without_improvement": 5
  }
}